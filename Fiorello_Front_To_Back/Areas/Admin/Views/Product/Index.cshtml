@using Fiorello_Front_To_Back.Areas.Admin.ViewModels.Products
@using Fiorello_Front_To_Back.Models
@model ProductsIndexViewModel
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Product</h4>

                        <h5>Filter by:</h5>
                        <div class="filter-section">
                            <form method="get" asp-action="index" asp-controller="product">
                                <div class="row" >
                                    <div class="col-6">
                                        <div class="form-group col-md-6">
                                            <label asp-for="Title"></label>
                                            <input asp-for="Title" class="form-control" />
                                        </div>
                                        <br>
                                        </br>
                                        <div class="form-group col-md-6">
                                            <label asp-for="CategoryId"></label>
                                            <select asp-for="CategoryId" asp-items="Model.Categories">
                                                <option value="">Choose</option>
                                            </select>

                                        </div>
                                        <br>
                                        </br>
                                        <div class="form-group col-md-6">
                                            <label asp-for="MinPrice"></label>
                                            <input asp-for="MinPrice" class="form-control" />
                                        </div>
                                        <br>
                                        </br>
                                        <div class="form-group col-md-6">
                                            <label asp-for="MaxPrice"></label>
                                            <input asp-for="MaxPrice" class="form-control" />
                                        </div>
                                        <br>
                                        </br>
                                        <div class="form-group col-md-6">
                                            <label asp-for="MinQuantity"></label>
                                            <input asp-for="MinQuantity" class="form-control" />
                                        </div>
                                        <br>
                                        </br>
                                        <div class="form-group col-md-6">
                                            <label asp-for="MaxQuantity"></label>
                                            <input asp-for="MaxQuantity" class="form-control" />
                                        </div>
                                        <br>
                                        </br>
                                         <div class="form-group col-md-6">
                                            <label asp-for="CreatedAtStart"></label>
                                            <input type="date" asp-for="CreatedAtStart" class="form-control" />
                                        </div>
                                        <br>
                                        </br>
                                           <div class="form-group col-md-6">
                                            <label asp-for="CreatedAtEnd"></label>
                                            <input type="date" asp-for="CreatedAtEnd" class="form-control" />
                                        </div>
                                        <br>
                                        </br>
                                        <div class="form-group col-md-6">
                                            <label asp-for="Status"></label>
                                            <select asp-for="Status" asp-items="Html.GetEnumSelectList<ProductStatus>()">
                                                <option value="" >Choose</option>
                                            </select>
                                        </div>
                                        <br>
                                        <div class="form-group col-md-6">
                                            <button type="submit" class="btn btn-outline-success">
                                                Search
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                        <a class="btn btn-primary" asp-action="create" asp-controller="product" asp-area="admin">CREATE PRODUCT</a>
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Title</th>
                                        <th>Price</th>
                                        <th>Category</th>
                                        <th>Status</th>
                                        <th>Quantity</th>
                                        <th>CreateAt</th>
                                        <th>Photo</th>
                                        <th>Actions</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var product in Model.Products)
                                    {
                                        <tr>
                                            <td>@product.Id</td>
                                            <td>@product.Title</td>
                                            <td>@product.Cost</td>
                                            <td>@product.Category.Title</td>
                                            <td>@product.Status</td>
                                            <td>@product.Quantity</td>
                                            <td>@product.CreatedAt.ToShortDateString()</td>
                                            <td><img src="~/images/@product.PhotoName" /></td>
                                            <td>
                                                <a class="btn btn-primary" asp-action="update" asp-controller="product" asp-area="admin" asp-route-id="@product.Id">Update</a>
                                                <a class="btn btn-danger" onclick="confirm('Eminsinizmi?')" asp-action="delete" asp-controller="product" asp-area="admin" asp-route-id="@product.Id">Delete</a>
                                                <a class="btn btn-info" asp-action="details" asp-controller="product" asp-area="admin" asp-route-id="@product.Id">Details</a>
                                            </td>
                                        </tr>
                                    }


                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>