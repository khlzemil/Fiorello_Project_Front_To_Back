@using Fiorello_Front_To_Back.Areas.Admin.ViewModels.Experts
@model ExpertsIndexViewModel
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Experts</h4>
                        <a class="btn btn-main" href="/admin/experts/create">Create expert</a>
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Name Surname</th>
                                        <th>Position</th>
                                        <th>Photo</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var expert in Model.Experts)
                                    {
                                        <tr>
                                            <td>@expert.Id</td>
                                            <td>@expert.Name  @expert.Surname</td>
                                            <td>@expert.Position</td>
                                            <td><img src="~/images/@expert.PhotoName"><td>
                                            <td>
                                                <a class="btn btn-primary" asp-action="update" asp-controller="experts" asp-area="admin" asp-route-id="@expert.Id">
                                                    Update
                                                </a>
                                                <br>
                                                </br>
                                                <a class="btn btn-danger" asp-action="delete" asp-controller="experts" asp-area="admin" asp-route-id="@expert.Id">
                                                    Delete
                                                </a>
                                                <br>
                                                </br>
                                                <a class="btn btn-danger" asp-action="details" asp-controller="experts" asp-area="admin" asp-route-id="@expert.Id">
                                                    Details
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>