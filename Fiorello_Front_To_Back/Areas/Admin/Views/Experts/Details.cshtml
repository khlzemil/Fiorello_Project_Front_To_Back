@using Fiorello_Front_To_Back.Areas.Admin.ViewModels.Experts
@model ExpertsDetailsViewModel
<div class="col-lg-12 grid-margin ">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Expert Details</h4>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Name Surname</th>
                            <th>Position</th>
                            <th>Photo</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>@Model.Id</td>
                            <td>@Model.Name @Model.Surname</td>
                            <td>@Model.Position</td>
                           <td><img src="~/images/@Model.PhotoName" /></td>
                        </tr>
                    </tbody>
                </table>
                <a asp-action="index" asp-controller="experts" class="btn btn-info">Previous</a>
            </div>
        </div>
    </div>
</div>