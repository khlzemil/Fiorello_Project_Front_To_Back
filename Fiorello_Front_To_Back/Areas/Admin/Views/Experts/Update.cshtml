@using Fiorello_Front_To_Back.Areas.Admin.ViewModels.Experts
@model ExpertsUpdateViewModel
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-md-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">

                        <p class="card-description">
                            Update Expert
                        </p>
                        <form enctype="multipart/form-data" method="post" asp-action="update" asp-controller="experts" asp-area="admin" class="forms-sample">
                            <div class="form-group">
                                <label asp-for="Name"></label>
                                <input class="form-control" asp-for="Name">
                                <span asp-validation-for="Name"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Surname"></label>
                                <input class="form-control" asp-for="Surname">
                                <span asp-validation-for="Surname"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Position"></label>
                                <input class="form-control" asp-for="Position">
                                <span asp-validation-for="Position"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Photo"></label>
                                <input class="form-select" asp-for="Photo">
                                <span asp-validation-for="Photo"></span>
                            </div>
                            <button type="submit" class="btn btn-primary me-2">Submit</button>
                            <a class="btn btn-danger" asp-action="index" asp-controller="experts" asp-area="admin"> Cancel</a>
                        </form>
                        <br>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.ckeditor.com/ckeditor5/35.2.1/classic/ckeditor.js"></script>

