@using Fiorello_Front_To_Back.ViewModels.Basket
@model BasketIndexViewModel

<section class="h-100" style="background-color: #eee;">
    <div class="container h-100 py-5">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-10">

                <div class="d-flex justify-content-between align-items-center mb-4">
                </div>

                @foreach (var basketProduct in Model.BasketProducts)
                {
                    <div class="card rounded-3 mb-4 basketProduct" id=@basketProduct.Id>
                        <div class="card-body p-4">
                            <div class="row d-flex justify-content-between align-items-center">
                                <div class="col-md-2 col-lg-2 col-xl-2">
                                    <img src="~/assets/img/@basketProduct.PhotoName"
                                     class="img-fluid rounded-3" alt="Cotton T-shirt">
                                </div>
                                <div class="col-md-3 col-lg-3 col-xl-3">
                                    <p class="lead fw-normal mb-2">@basketProduct.Title</p>
                                    <p><span class="text-muted">Stock: </span> <span class="text-muted">@basketProduct.StockQuantity </span></p>
                                </div>

                                <div class="col-md-3 col-lg-3 col-xl-2 d-flex">
                                    <button data-id="@basketProduct.Id" id="upcounter" class="btn btn-link px-2"
                                        onclick="this.parentNode.querySelector('input[type=number]').stepUp()">
                                    </button>
                                    
                                    <input id="form1" min="0" name="quantity" value="@basketProduct.Quantity" type="number"
                                       class="form-control form-control-sm" />
                                       <button data-id="@basketProduct.Id" id="downcounter" class="btn btn-link px-2"
                                        onclick="this.parentNode.querySelector('input[type=number]').stepDown()">
                                    </button>

                                    
                                </div>
                                <div class="col-md-3 col-lg-2 col-xl-2 offset-lg-1">
                                    <h5 class="mb-0">$@basketProduct.Price</h5>
                                </div>
                                <div class="col-md-1 col-lg-1 col-xl-1 text-end">
                                    <button id="deleteButton" data-id="@basketProduct.Id" class="text-danger"><i class="fas fa-trash fa-lg"></i></button>
                                </div>
                            </div>
                        </div>
                    </div>

                }
            </div>
        </div>
    </div>
</section>

@section Scripts{

    <script src="~/assets/js/custom.js"></script>
}